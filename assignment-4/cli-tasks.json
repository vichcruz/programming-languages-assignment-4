{
  "build": {
    "desc": "Compile the Go project",
    "cmd": "go build ./...",
    "cwd": "./",
    "deps": ["lint"]
  },

  "test": {
    "desc": "Run all tests",
    "cmd": "go test ./...",
    "cwd": "./",
    "deps": ["build"]
  },

  "lint": {
    "desc": "Run linter",
    "cmd": "golangci-lint run",
    "cwd": "./",
    "deps": []
  },

  "clean": {
    "desc": "Remove build artifacts",
    "cmd": "rm cli-task-runner",
    "cwd": "./",
    "deps": ["build"]
  }
}
