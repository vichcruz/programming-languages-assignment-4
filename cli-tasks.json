{
  "build": {
    "desc": "Compile the Go project",
    "cmd": "go build ./...",
    "cwd": "./",
    "deps": ["test"]
  },

  "test": {
    "desc": "Run all tests",
    "cmd": "go test ./...",
    "cwd": "./",
    "deps": ["lint"]
  },

  "lint": {
    "desc": "Run linter",
    "cmd": "golangci-lint run",
    "cwd": "./",
    "deps": []
  },

  "clean": {
    "desc": "Remove build artifacts",
    "cmd": "rm cli-task-runner",
    "cwd": "./",
    "deps": ["build"]
  },

  "print": {
    "desc": "Print a test txt file",
    "cmd": "cat test.txt",
    "cwd": "./catTest/",
    "deps": [""]
  }
}
